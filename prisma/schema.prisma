// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id           Int           @id @default(autoincrement())
  username     String        @unique @db.VarChar(60)
  password     String
  passwordSalt String
  displayName  String        @db.VarChar(100)
  posts        JournalPost[]
  dailyGoals   DailyGoal[]
  ToDo         ToDo[]
}

// Daily Goal =================================================================

model DailyGoal {
  id              Int          @id @default(autoincrement())
  subject         User         @relation(fields: [subjectId], references: [id])
  subjectId       Int
  partialCriteria String       @db.VarChar(255)
  totalCriteria   String       @db.VarChar(255)
  completion      Completion[]
}

enum CompletionCriteria {
  Partial
  Total
}

model Completion {
  goal     DailyGoal          @relation(fields: [goalId], references: [id])
  date     DateTime
  goalId   Int
  criteria CompletionCriteria

  @@unique([goalId, date])
}

// Journals ===================================================================

model JournalPost {
  date     DateTime @default(now())
  content  String?
  author   User     @relation(fields: [authorId], references: [id])
  authorId Int

  @@unique([authorId, date])
}

// To-do List =================================================================

enum ToDoProgress {
  NotDone
  Doing
  Done
}

model ToDo {
  id        Int          @id @default(autoincrement())
  subject   User         @relation(fields: [userId], references: [id])
  userId    Int
  createdAt DateTime     @default(now())
  deadline  DateTime?
  progress  ToDoProgress
}
